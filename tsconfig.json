{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                                   
    "allowJs": true,
    "outDir": "dist",                          
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom", "es6"],
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}