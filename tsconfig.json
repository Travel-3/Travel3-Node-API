{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "esnext.asynciterable"
        ],
        "rootDir": "src",
        "declaration": true,
        "declarationMap": true,
        "pretty": true,
    },
    "include": ["src", "types"],
    "exclude": ["node_modules", "dist"]
}
